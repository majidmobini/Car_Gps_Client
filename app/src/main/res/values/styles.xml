<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Base application theme. Theme.AppCompat.Light.DarkActionBar"-->
    <style name="AppTheme" parent= "Theme.MaterialComponents">
        <!-- Customize your theme here. -->
        <item name="android:windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="MyMaterialTheme.Base" parent="Theme.MaterialComponents.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorAccent</item>

    </style>

    <style name="MyMaterialTheme" parent="MyMaterialTheme.Base"/>

    <style name="splashScreenTheme" parent="AppTheme"
           android:scaleType="fitXY">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@color/white</item>
    </style>

    <style name="AppThemeMaterial" parent="Theme.MaterialComponents">
        <!-- Add attributes here -->
    </style>

    <style name="textFieldStyle" parent="Theme.MaterialComponents" >
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColorHint">#707070</item>

    </style>
     <style name="buttomtext_neg">
        <item name="android:textColor">#990000</item>
        <item name="android:padding">5dp</item>
        <item name="android:textSize">18sp</item>

    </style>

    <style name="buttomtext" parent="Theme.MaterialComponents">
        <item name="android:textColor">#000000</item>
        <item name="android:padding">5dp</item>

        <item name="android:textSize">18sp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
    </style>


    <style name="titleText" parent="Theme.MaterialComponents">
        <item name="android:textColor">#ffffff</item>
        <item name="android:padding">5dp</item>
        <item name="android:textSize">18sp</item>
        <item name="android:gravity">center_vertical</item>\
        <item name="android:layout_gravity">center_vertical</item>

    </style>

    <style name="text" parent="Theme.MaterialComponents">
        <item name="android:textColor">#ffffff</item>
        <item name="android:padding">5dp</item>
        <item name="android:textSize">15sp</item>
        <item name="android:gravity">center_vertical</item>\
        <item name="android:layout_gravity">center_vertical</item>

    </style>

    <style name="textDevRow" parent="Theme.MaterialComponents">
        <item name="android:textColor">#000000</item>
        <item name="android:padding">5dp</item>
        <item name="android:textSize">15sp</item>
        <item name="android:gravity">center_vertical</item>\
        <item name="android:layout_gravity">center_vertical</item>

    </style>

    <style name="Theme.Transparent" parent="android:Theme">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>


    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@anim/dialog_slide_up</item>
        <item name="android:windowExitAnimation">@anim/dialog_slide_down</item>
    </style>

    <style name="DialogSlideAnim" parent="@android:style/Theme.Dialog">
        <item name="android:windowAnimationStyle">@style/DialogAnimation</item>
    </style>

    <style name="txt_toast">
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textCursorDrawable">@null</item>
        <item name="android:textStyle">normal</item>
    </style>

</resources>
